<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llvGPlusLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yeahdev.materiallovetesting.activities.GPlusLoginActivity"
    android:orientation="vertical" >

    <!--Example: Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"/>

    <!-- Example: CardView -->
    <android.support.v7.widget.CardView
        android:id="@+id/cvGPlusLoginOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/tvGPlusTitleOne"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/theme_window_background"
                android:background="@color/theme_default_primary_dark"
                android:textSize="20sp"
                android:text="Bring me to the Main View"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"/>

            <com.devspark.robototextview.widget.RobotoButton
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="10dp"
                android:id="@+id/btnGoToMain"
                android:transitionName="@string/transaction_to_mainview"
                android:text="GO"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Example: CardView -->
    <android.support.v7.widget.CardView
        android:id="@+id/cvGPlusLoginTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/tvGPlusTitleTwo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/theme_window_background"
                android:background="@color/theme_default_primary_dark"
                android:textSize="20sp"
                android:text="G+ Login Example"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_sign_in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"/>

            <com.devspark.robototextview.widget.RobotoButton
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="10dp"
                android:id="@+id/btn_sign_out"
                android:text="@string/btn_logout_from_google"
                android:visibility="gone"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"/>

            <com.devspark.robototextview.widget.RobotoButton
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="10dp"
                android:id="@+id/btn_revoke_access"
                android:text="@string/btn_revoke_access"
                android:visibility="gone"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>