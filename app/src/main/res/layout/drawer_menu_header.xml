<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="false"
        android:scaleType="centerCrop"
        android:src="@drawable/drawer_background"
        android:backgroundTint="@color/accent_material_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cvImagePic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baracktocat"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            app:border_width="2dp"
            app:border_color="#FF000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tvDrawerMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_window_background"
                android:textSize="10sp"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"
                android:text="G+ Profile Name"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tvDrawerMenuEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_window_background"
                android:textSize="10sp"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"
                android:text="G+ Profile Email"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>