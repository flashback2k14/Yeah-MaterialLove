<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yeahdev.materiallovetesting.fragments.WelcomeFragment">

    <!-- Example: CardView -->
    <android.support.v7.widget.CardView
        android:id="@+id/cvFirst"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tvWelcomeTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/theme_accent"
                android:textSize="40sp"
                android:text="@string/app_name"
                android:elevation="10dp"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"/>

            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tvWelcomePersonName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/theme_accent"
                android:textSize="20sp"
                android:text="G+ Profile Name"
                android:elevation="10dp"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"/>

            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tvWelcomeEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/theme_window_background"
                android:background="@color/theme_accent"
                android:textSize="15sp"
                android:text="G+ Profile Email"
                android:elevation="10dp"
                app:fontFamily="roboto_slab"
                app:textWeight="normal"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- Example: FloatingActionButton -->
    <com.melnykov.fab.FloatingActionButton
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:elevation="10dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_content_add"
        fab:fab_colorNormal="@color/theme_accent"
        fab:fab_colorPressed="@color/theme_default_primary"
        fab:fab_colorRipple="@color/ripple" />

</FrameLayout>