<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_height="1.50dp"
        android:layout_width="match_parent"
        android:background="#CCd5d5d5"
        android:visibility="visible" />

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <ImageView
           android:id="@+id/ivIconDrawerItemAbout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal|center_vertical"
           android:layout_margin="5dp"
           android:src="@drawable/ic_action_action_info_outline"/>

       <com.devspark.robototextview.widget.RobotoTextView
           xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/tv_drawer_menu_item_footer"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal|center_vertical"
           android:layout_margin="5dp"
           android:textColor="@color/theme_default_primary"
           android:textSize="20sp"
           android:text="About"
           app:fontFamily="roboto_slab"
           app:textWeight="normal" />

   </LinearLayout>

</LinearLayout>